page {
  min-height: 100%;
  font-family: SourceHanSansCN-Regular, "PingFang SC", "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Helvetica, Arial, Verdana, sans-serif;
  position: relative;
}
.container {
  /* padding-top: 30rpx; */
  padding: 30rpx 40rpx 30rpx;
  /* box-sizing: border-box;
  height: 100%; */
}

.container-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.form {
  position: relative;
  z-index: 1;
  /* margin: 0 40rpx 30rpx; */
  padding: 30rpx 60rpx;
  background: #fff;
  border-radius: 8px;
  color: #555;
  font-size: 30rpx;
}

.form-control {
  margin-bottom: 20rpx;
}

.form-control .title {
  margin-bottom: 12rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: #333;
}

.form-control .title text {
  color: red;
  font-size: 24rpx;
  position: relative;
  top: -8rpx;
  margin-left: 2rpx;
}

.two-input-row {
  display: flex;
}

.two-input-row input {
  flex: 1;
  font-size: 24rpx;
  height: 52rpx;
  padding: 0 8rpx;
  border: 1px solid #333;
  box-sizing: border-box;
}
.two-input-row input:first-of-type {
  margin-right: 16rpx;
}

.input-row {
  width: 100%;
  font-size: 24rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 8rpx;
  border: 1px solid #333;
  box-sizing: border-box;
}

.btn {
  width: 500rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  margin: auto;
  margin-top: 16rpx;
}

.tip {
  margin-bottom: 50rpx;
  font-size: 26rpx;
  color: #333;
}

.tip text {
  color: #000;
}

.submit-btn {
  /* background: #9c38db; */
  color: #fff;
  border-radius: 68rpx;
  position: relative;
}

.submit-btn image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.submit-btn text {
  position: relative;
  z-index: 1;
}

.reset-btn {
  color: #7c78e8;
}

.visit-time-row {
  color: #999;
  height: 54rpx;
  line-height: 54rpx;
  position: relative;
}

.visit-time-row image {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 40rpx;
  top: 11rpx;
}

.visit-selected-time {
  color: #333;
}

.c-radio {
  display: inline-flex;
  font-size: 24rpx;
  color: #333;
  font-weight: 400;
  align-items: center;
}

.c-radio image {
  width: 24rpx;
  height: 24rpx;
  /* vertical-align: middle; */
  margin-right: 8rpx;
  display: none;
}

.c-radio.selected image {
  display: inline-block;
}

.c-radio-circle {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #777;
  border-radius: 24rpx;
  position: static!important;
  margin-right: 8rpx;
  box-sizing: border-box;
  margin-left: 0!important;
}

.c-radio.selected .c-radio-circle {
  display: none;
}