/* select.wxss */
.c-select {
  position: relative;
}

.c-select-title {
  width: 100%;
  font-size: 24rpx;
  padding: 0 8rpx;
  border: 1px solid #333;
  box-sizing: border-box;
  color: #999;
  height: 42rpx;
  line-height: 42rpx;
  position: relative;
}

.c-select-title image {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 40rpx;
  top: 6rpx;
}

.c-select-panel {
  position: absolute;
  z-index: 66;
  left: 0;
  right: 0;
  height: 200rpx;
  background: #fff;
  border-bottom-left-radius: 4rpx;
  border-bottom-right-radius: 4rpx;
  /* border: 1px solid #bbb;
  border-top: none; */
}

.c-select-row {
  line-height: 54rpx;
  margin: 0 8rpx;
  /* border-bottom: 1px solid #aaa; */
}