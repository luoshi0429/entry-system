<view class="c-select">
  <view bindtap="tapShowSelect" class="c-select-title">{{ title }}<image src="../../images/select.png" /></view>
  <picker-view wx:if="{{ showSelect }}" class="c-select-panel">
    <picker-view-column>
      <view class="c-select-row" wx:for="{{ options }}" wx:key="{{index}}">{{ item }}</view>
    </picker-view-column>
  </picker-view>
